{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts", // Isso incluirá todos os arquivos .ts dentro de src/
    "server.js" // Isso incluirá o arquivo index.ts
  ],
  "exclude": ["dist"]
}
